<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="16" alignment="CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="src.main.ui.LoginController" stylesheets="@../styles.css">
    <Label text="Welcome to Your Bank" styleClass="title"/>
    <TextField fx:id="usernameField" promptText="Username" maxWidth="260"/>
    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="260"/>
    <TextField fx:id="accountField" promptText="Account Number" maxWidth="260"/>
    <Button text="Login" onAction="#onLogin" maxWidth="260"/>
    <Label fx:id="errorLabel" styleClass="error"/>
</VBox>
